{
    "name": "dimstar-ai",
    "productName": "DimStar AI",
    "version": "1.0.0",
    "description": "迭代式 AI - 追求极致回复",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win"
    },
    "build": {
        "appId": "com.dimstar.ai",
        "productName": "DimStar AI",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "**/*",
            "!node_modules/.cache/**",
            "!dist/**",
            "!llm-reasoners/**"
        ]
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.13.3"
    }
}